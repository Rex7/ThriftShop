<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_margin="10dp"
    xmlns:tool="http://schemas.android.com/tools">



    <RelativeLayout
        android:id="@+id/image_body"
        android:layout_width="200dp"
        android:layout_height="170dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ImageViewVertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="imageTransition"
            android:layout_centerHorizontal="true"
            app:shapeAppearanceOverlay="@style/roundedCorner"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/heels" />



    </RelativeLayout>

    <TextView
        android:id="@+id/nameOfProduct"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_body"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/regular"
        android:maxLines="2"
        android:minLines="2"
        android:textSize="14sp"
        tool:text="South Indian Necklace" />

    <TextView
        android:id="@+id/priceOfProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_body"
      android:layout_marginLeft="150dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/price"
        android:textColor="#DA7070"
        android:textSize="14sp" />
</RelativeLayout>

