<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="220dp">

<androidx.cardview.widget.CardView

    android:id="@+id/verticalCard"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
  android:background="@drawable/ic_rectangleshape"
    android:layout_height="170dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageViewVertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true"

            android:adjustViewBounds="true"
            android:background="@color/button_color"
            android:scaleType="centerCrop"
            android:src="@drawable/highheels" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameOfProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verticalCard"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/regular"
        android:text="@string/nameOfProduct"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/priceOfProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verticalCard"
      android:layout_marginLeft="150dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/price"
        android:textColor="#DA7070"
        android:textSize="14sp" />
</RelativeLayout>

