<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <RelativeLayout
        android:id="@+id/topBody"
        android:background="@drawable/ic_imagebackgroundlayer"
        android:layout_width="match_parent"
        android:layout_height="378dp">

        <ImageView
            android:id="@+id/productImage"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/highheels" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/bottomBody"
        android:layout_below="@+id/topBody"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/robo"
                android:text="Sleak high heels"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/brand"
                android:layout_below="@+id/productName"
                android:fontFamily="@font/bold"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="Brand "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/brandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/brand"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/brand"
                android:fontFamily="@font/regular"
                android:text="Clark heels "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelShoeSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bold"
                android:text="Size " />

            <TextView
                android:id="@+id/shoeSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/labelShoeSize"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/brand"
                android:fontFamily="@font/regular"
                android:text="4 inch "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelShoeSize"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bold"
                android:text="Condition " />

            <TextView
                android:id="@+id/conditionOfProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/labelCondition"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/labelCondition"
                android:fontFamily="@font/regular"
                android:text="Pre-owned"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelCondition"
                android:layout_marginStart="49dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/bold"
                android:text="Item Description :"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelItemDescription"
                android:layout_marginStart="49dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robo"
                android:minLines="2"
                android:text="@string/sample_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemDescription"
                android:layout_marginStart="49dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/bold"
                android:text="@string/priceLabel"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/priceData"
                android:text="@string/priceLabel"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/priceLabel"
                android:fontFamily="@font/robo"
                android:layout_marginStart="49dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/itemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/addToWish"
        android:text="Add to Wishlist"
        app:backgroundTint="@null"
        android:textColor="#000"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_addwishlist"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buyNow"
        android:text="Buy Now"
        app:backgroundTint="@null"
        android:background="@drawable/ic_buynow"
        android:layout_marginLeft="240dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>